generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          Int     @id @default(autoincrement())
  template    String
  category    String
  device_type String
  path        String
  authorId    Int
  premium     Boolean
  publicId    String
  verified    Boolean
  author      User    @relation(fields: [authorId], references: [id])
}

model User {
  id        Int        @id @default(autoincrement())
  password  String
  username  String     @unique
  templates Template[]

  @@unique([username, id], name: "usernameId")
}

model ToDo {
  id Int @id @default(autoincrement())
  path String
  authorId Int
  finished Boolean
  publicId String
}