generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id Int @id @default(autoincrement())
  template String
  path String
  category String
  device_type String
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  premium Boolean
  verified Boolean
}

model User{
  id Int @id @default(autoincrement())
  templates Template[]
  username String
  password String

  @@unique( name: "usernameId",fields: [username,id])
}
