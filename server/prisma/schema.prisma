generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id          Int     @id @default(autoincrement())
  template    String
  category    String
  device_type String
  path        String
  authorId    Int
  premium     Boolean
  publicId    String
  verified    Boolean
  name        String?
  author      User    @relation(fields: [authorId], references: [id])
}

model User {
  id          Int        @id @default(autoincrement())
  password    String
  username    String     @unique
  bundle      Int        @default(0)
  imagesLimit Int        @default(3)
  pages       Int        @default(3)
  templates   Template[]
  todos       ToDo[]

  @@unique([username, id], name: "usernameId")
}

model ToDo {
  id       Int     @id @default(autoincrement())
  path     String
  authorId Int
  finished Boolean
  publicId String
  author   User    @relation(fields: [authorId], references: [id])
}

model user_session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)
}
